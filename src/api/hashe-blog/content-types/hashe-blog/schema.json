{
  "kind": "collectionType",
  "collectionName": "hashe_blogs",
  "info": {
    "singularName": "hashe-blog",
    "pluralName": "hashe-blogs",
    "displayName": "Hashe Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "string",
      "required": true
    },
    "imagen": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "fecha": {
      "type": "date"
    },
    "categorias": {
      "type": "blocks",
      "required": true
    },
    "contenido": {
      "type": "richtext",
      "required": true
    },
    "link": {
      "type": "component",
      "component": "hashe.link",
      "repeatable": true,
      "required": true
    }
  }
}
